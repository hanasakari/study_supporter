{
  "manifest_version": 3,
  "name": "上大网课助手",
  "version": "0.1.0",
  "description": "用于监控网课查看完毕自动切换到下一个网课的工具",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "上大网课助手",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://sdjj.ct-edu.com.cn/"
  ],
  "content_scripts": [
    {
      "matches": ["https://sdjj.ct-edu.com.cn/*"],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}
